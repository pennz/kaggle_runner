#!/bin/bash -x
PC=vtool.duckdns.org

stty rows 40 columns 80
comm=$(mosh-server new 2>/dev/null | grep -n "MOSH CONNECT" | cut -d" " -f 3,4 | awk '{ print "MOSH_KEY=" $2 " mosh-client 127.0.0.1 " $1 }')

port=$(echo $comm | cut -d" " -f 4)
echo >&2 Start Connection between mosh server\:$port and PC

echo $comm
ncat -vvu $PC 50001 -c "echo; ncat -u 127.0.0.1 $port " & # so mosh-server runs in kaggle server , the tunnel will be
